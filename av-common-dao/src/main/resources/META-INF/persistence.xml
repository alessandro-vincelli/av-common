<?xml version="1.0" encoding="UTF-8"?>

<persistence xmlns="http://java.sun.com/xml/ns/persistence"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence
   http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd" version="2.0">

	<!-- persistence.xml -->

	<persistence-unit name="daoPersistence">
		<!-- The provider only needs to be set if you use several JPA providers -->
		<provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
	
		<class>it.av.users.model.User</class>
		<class>it.av.users.model.UserProfile</class>
		<class>it.av.users.model.Language</class>
		<class>it.av.users.model.City</class>
		<class>it.av.users.model.Country</class>		

		<properties>
			<!-- Scan for annotated classes  -->
			<!--  property name="hibernate.archive.autodetection" value="class" /-->
			
			<property name="hibernate.jdbc.use_streams_for_binary" value="true"/>
			
			<property name="hibernate.show_sql" value="true" />
			<property name="hibernate.format_sql" value="false" />
			<property name="use_sql_comments" value="false" />

			<property name="hibernate.dialect" value="org.hibernate.dialect.PostgreSQLDialect" />
			<property name="hibernate.ejb.naming_strategy" value="org.hibernate.cfg.ImprovedNamingStrategy"/>
				
			<property name="hibernate.hbm2ddl.auto" value="update" />
		</properties>
	</persistence-unit>

</persistence>
